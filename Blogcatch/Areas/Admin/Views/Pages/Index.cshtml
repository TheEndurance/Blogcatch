@model IEnumerable<Blogcatch.ViewModel.PageViewModel>

@{
    ViewBag.Title = "Pages";
}

<h2>Pages</h2>
@Html.ActionLink("Add a page","AddPage")
@if (!Model.Any())
{
    <p>There are currently no pages.</p>
}
else
{
    <table class="table table-responsive">
        <tr>
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            <th>
                Sidebar
            </th>
            <th>
                Modify
            </th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Title)
                </td>
                <td>
                    @Html.DisplayFor(m=>item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(m=>item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit","EditPage",new {id =item.Id})
                    @Html.ActionLink("Details", "PageDetails",new {id=item.Id})
                    @Html.ActionLink("Delete", "DeletePage",new {id=item.Id})
                </td>
            </tr>
        }
      
        
    </table>
}

